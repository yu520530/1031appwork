<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="剪刀石頭布"
            android:id="@+id/title"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_marginBottom="20sp"
            android:layout_centerHorizontal="true"
            android:padding="20sp"
    />
    <Button
            android:id="@+id/btn_scissor"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="剪刀"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textSize="40sp"
            android:layout_below="@+id/title" />
    <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_stone"
            android:layout_below="@+id/title"
            android:layout_marginRight="10sp"
            android:text="石頭"
            android:textSize="40sp"
            android:layout_toRightOf="@+id/btn_scissor"/>
    <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_paper"

            android:layout_below="@+id/title"
            android:text="布"
            android:textSize="40sp"
            android:layout_toRightOf="@+id/btn_stone"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_our"
            android:layout_marginLeft="10sp"
            android:text="我方："
            android:layout_marginTop="30sp"
            android:layout_marginBottom="30sp"
            android:layout_below="@+id/btn_stone"
            android:textSize="40sp"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="電腦："
            android:layout_marginLeft="10sp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="30sp"
            android:id="@+id/tv_com"
            android:layout_below="@+id/tv_our"
            android:textSize="40sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_whowin"
            android:textSize="40sp"
            android:layout_below="@+id/tv_com"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="10sp"
    />



</RelativeLayout>